CXX = g++
CXXFLAGS = -Wall -std=c++17
LDFLAGS = -lsfml-graphics -lsfml-window -lsfml-system

SRC = $(wildcard src/*.cpp)
OBJ = $(SRC:.cpp=.o)
TARGET = mon-jeu
INC = -Iinclude

all: $(TARGET)

$(TARGET): $(OBJ)
	$(CXX) $(CXXFLAGS) $(SRC) $(INC) -o $(TARGET) $(LDFLAGS)

clean:
	rm -f $(OBJ) $(TARGET)


