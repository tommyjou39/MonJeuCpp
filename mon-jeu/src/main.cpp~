#include <SFML/Graphics.hpp>
#include "../include/player.hpp"



int main() {
    sf::RenderWindow window(sf::VideoMode(800, 600), "Jeu SFML avec Emacs");
    Player player;

    while (window.isOpen()) {
        sf::Event event;
        while (window.pollEvent(event)) {
            if (event.type == sf::Event::Closed)
                window.close();
        }

        player.handleInput();
        player.update();
 
        window.clear();
        player.draw(window);
        window.display();
    }

    return 0;
}

